<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<uk.ac.abdn.t3.trustedtinythings.CustomLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LegendActivity" >


 
 
 
      <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/nowCardStyle"
        android:background="@drawable/search_bg_shadow"
        android:id="@+id/details_device_image_name_layout"
         android:divider="@drawable/mydivider"
        android:showDividers="middle"
        android:dividerPadding="22dp">
        
         
            <ImageView
        	android:layout_weight="1"
    
          android:layout_width="match_parent"
          android:layout_height="match_parent"
     
          android:src="@drawable/logo_blue"
          
           />
    
        
        <uk.ac.abdn.t3.trustedtinythings.StyledTextView
            android:layout_weight="1"
                android:id="@+id/details_device_description"
           
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:gravity="center"
        android:textSize="15sp"
        android:text="This logo is our flagship. whenever you see this attached to a device it means that you can find out about its capabilities using our app."
           
        />
    </LinearLayout>
    
 
 
 
 
 
 
     <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/nowCardStyle"
        android:background="@drawable/search_bg_shadow"
        android:id="@+id/details_device_image_name_layout"
         android:divider="@drawable/mydivider"
        android:showDividers="middle"
        android:dividerPadding="22dp">
        
         
            <ImageView
        	android:layout_weight="1"
          android:id="@+id/details_device_image_view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:src="@drawable/man1"
          
           />
    
        
        <uk.ac.abdn.t3.trustedtinythings.StyledTextView
            android:layout_weight="1"
                android:id="@+id/details_device_description"
           
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:gravity="center"
        android:textSize="15sp"
        android:text="This icon is a representation of yourself : user of this device."
           
        />
    </LinearLayout>
  
    
     
     <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/nowCardStyle"
        android:background="@drawable/search_bg_shadow"
        android:id="@+id/details_device_image_name_layout"
         android:divider="@drawable/mydivider"
        android:showDividers="middle"
        android:dividerPadding="22dp">
        
         
            <ImageView
        	android:layout_weight="1"
    
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:src="@drawable/organisation"
          
           />
    
        
        <uk.ac.abdn.t3.trustedtinythings.StyledTextView
            android:layout_weight="1"
                android:id="@+id/details_device_description"
           
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:gravity="center"
        android:textSize="15sp"
        android:text="This icon represents organisations that are associated with this device, such as service providers, manufacturers, owners and any other third-party organisations."
           
        />
    </LinearLayout>
  
      <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/nowCardStyle"
        android:background="@drawable/search_bg_shadow"
        android:id="@+id/details_device_image_name_layout"
         android:divider="@drawable/mydivider"
        android:showDividers="middle"
        android:dividerPadding="22dp">
        
         
            <ImageView
        	android:layout_weight="1"
    
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:src="@drawable/data"
          
           />
    
        
        <uk.ac.abdn.t3.trustedtinythings.StyledTextView
            android:layout_weight="1"
                android:id="@+id/details_device_description"
           
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:gravity="center"
        android:textSize="15sp"
        android:text="This icon represents what data is being collected about you IF you accept to use this device."
           
        />
    </LinearLayout>
    
    
  
    
</uk.ac.abdn.t3.trustedtinythings.CustomLayout>
</ScrollView>

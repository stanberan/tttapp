<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<uk.ac.abdn.t3.trustedtinythings.CustomLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DeviceDetailsActivity" >

    
         
       <uk.ac.abdn.t3.trustedtinythings.StyledTextView
            android:layout_weight="1"
                android:id="@+id/details_thing_name"
                  android:background="@drawable/search_bg_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        
        />
    
    
   <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/nowCardStyle"
        android:background="@drawable/search_bg_shadow"
        android:id="@+id/details_device_image_name_layout"
         android:divider="@drawable/mydivider"
        android:showDividers="middle"
        android:dividerPadding="22dp">
   
       
        <uk.ac.abdn.t3.trustedtinythings.StyledTextView
            android:layout_weight="1"
                android:id="@+id/details_device_description"
           
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:gravity="center"
        android:textSize="16sp"
       
      
        />
    
     <ImageView
        	android:layout_weight="1"
          android:id="@+id/details_device_image_view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
       
           />
    </LinearLayout>
    <!--DEVICE OWNER CARD  -->
   <uk.ac.abdn.t3.trustedtinythings.StyledTextView
       android:text="DEVICE OWNER"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"    
       android:textStyle="bold"
       />
   
    <LinearLayout android:layout_width="match_parent"
             style="@style/nowCardStyle"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/search_bg_shadow"
         android:divider="@drawable/mydivider"
        android:showDividers="middle"
        android:dividerPadding="22dp">
        
        <uk.ac.abdn.t3.trustedtinythings.StyledTextView
            android:layout_weight="1"
                android:id="@+id/details_device_owner_title"
                
           
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         
          android:gravity="center"
        android:textSize="15sp"
       
      
        />
     <ImageView
        	android:layout_weight="1"
          android:id="@+id/details_device_owner_image_view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
       
           />
    </LinearLayout>
    
      <!--DEVICE MANUFCATURER CARD  -->
   <uk.ac.abdn.t3.trustedtinythings.StyledTextView
       android:text="DEVICE MANUFACTURER"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
         android:gravity="center"
       android:textStyle="bold"
       />
   
    <LinearLayout android:layout_width="match_parent"
             style="@style/nowCardStyle"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/search_bg_shadow"
         android:divider="@drawable/mydivider"
        android:showDividers="middle"
        android:dividerPadding="22dp">
        
        <uk.ac.abdn.t3.trustedtinythings.StyledTextView
            android:layout_weight="1"
                android:id="@+id/details_device_manufacturer_title"
                
           
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:layout_gravity="center_vertical"
        android:textSize="15sp"
     
      
        />
     <ImageView
        	android:layout_weight="1"
          android:id="@+id/details_device_manufacturer_image_view"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
       
           />
    </LinearLayout>
       <!--DEVICE TYPE  -->
   <uk.ac.abdn.t3.trustedtinythings.StyledTextView
       android:text="DEVICE TYPE"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
   
       android:gravity="center"
       android:textStyle="bold"
       />
    
     <uk.ac.abdn.t3.trustedtinythings.StyledTextView
       android:background="@drawable/search_bg_shadow"
       android:text=""
            style="@style/nowCardStyle"
       android:id="@+id/details_device_type"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textStyle="bold"
       android:gravity="center"
       android:textColor="@color/black"
       />

</uk.ac.abdn.t3.trustedtinythings.CustomLayout>
</ScrollView>
